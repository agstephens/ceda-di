{
    "_option": "es_host: hostname of Elasticsearch node to use",
    "es-host": "mist.badc.rl.ac.uk",

    "_option": "es_port: port number of Elasticsearch node to use",
    "es-port": 9200,

    "_option": "es_index: Elasticsearch index to use",
    "es-index": "archive_level_1",

    "_option": "es_mapping: Elasticsearch document type to index data as",
    "es-mapping": "file",

    "_option": "es_index_settings: Path to Elasticsearch index settings config",
    "es-index-settings": "../../elasticsearch/mapping/level_1_settings.json",

    "_option": "log-path: log dir path, relative to 'outputpath'",
    "log-path": "/home/kleanthis/Dev/python_dev/ceda-di/log/",

    "_option": "log-level: Sets teh logging level",
    "log-level": "error",
    
    "_option": "start: Specify the start number (i.e. the first file to be scanned).",
    "start": 0,
    
    "_option": "num-files: Maximum numbers of fiels to scan.",
    "num-files": 100,
                    
    "_option": "num-processes: Number of processes to use for each task.",
    "num-processes": 200,
                   
               
    "_option": "logging: options for the 'logging' module",
    "_ref": "(see: https://docs.python.org/2/library/logging.html)",
    "logging": {
        "_option": "format: log entry format string",
        "format": "[%(levelname)s] %(asctime)s (%(name)s) %(message)s"
    },

    "_option": "handlers: python classes to handle data files",
    "handlers": 
    {
      ".nc$": 
      {
        "class": "ceda_di.file_handlers.netcdf_file.NetCDFFile",
        "priority": 10
      },
      "[^.nc]$": 
      {
        "class": "ceda_di.file_handlers.generic_file.GenericFile",
        "priority": 10
      }
    }
}





