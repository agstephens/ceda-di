{
    "settings": {
        "analysis": {
            "filter": {
                "min_length_5_filter": {
                    "type": "length",
                    "min": 5,
                    "max": 256
                },
                "path_filter": {
                    "type": "word_delimiter",
                    "generate_word_parts": "yes",
                    "generate_number_parts": "no",
                    "split_on_numerics": "no"
                }
            },
            "analyzer": {
                "variable_name_analyzer": {
                    "type": "custom",
                    "tokenizer": "keyword",
                    "filter": ["min_length_5_filter"]
                },
                "path_hierarchy_analyzer": {
                    "type": "custom",
                    "tokenizer": "path_hierarchy"
                },
                "path_analyzer": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["path_filter"]
                }
            }
        }
    },
    "mappings": {
        "geo_metadata": {
            "_all": {
                "enabled": true
            },
            "_id": {
                "path": "_id"
            },
            "properties": {
                "data_format": {
                    "properties": {
                        "format": {
                            "type": "string",
                            "store": "yes"
                        }
                    }
                },
                "index_entry_creation": {
                    "properties": {
                        "indexer": {
                            "type": "string",
                            "store": "yes"
                        }
                    }
                },
                "file": {
                    "properties": {
                        "filename": {
                            "type": "string",
                            "analyzer": "simple",
                            "store": "yes"
                        },
                        "path": {
                            "type": "string",
                            "analyzer": "path_analyzer",
                            "store": "yes",
                            "fields": {
                                "hierarchy": {
                                    "type": "string",
                                    "analyzer": "path_hierarchy_analyzer",
                                    "store": "yes"
                                }
                            }
                        },
                        "size": {
                            "type": "long"
                        }
                    }
                },
                "misc": {
                    "type": "object"
                },
                "parameters": {
                    "include_in_parent": true,
                    "type": "nested",
                    "properties": {
                        "name": {
                            "type": "string",
                            "analyzer": "variable_name_analyzer"
                        },
                        "value": {
                            "type": "string",
                            "analyzer": "variable_name_analyzer"
                        }
                    }
                },
                "spatial": {
                    "properties": {
                        "geometries": {
                            "properties": {
                                "search": {
                                    "type": "geo_shape",
                                    "tree": "quadtree",
                                    "precision": "50m",
                                    "store": "yes"
                                },
                                "display": {
                                    "properties": {
                                        "coordinates": {
                                            "type": "double",
                                            "enabled": false,
                                            "include_in_all" : false,
                                            "index": "no",
                                            "store": "yes"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "temporal": {
                    "properties": {
                        "end_time": {
                            "type": "date",
                            "format": "dateOptionalTime",
                            "store": "yes"
                        },
                        "start_time": {
                            "type": "date",
                            "format": "dateOptionalTime",
                            "store": "yes"
                        }
                    }
                }
            }
        }
    }
}
