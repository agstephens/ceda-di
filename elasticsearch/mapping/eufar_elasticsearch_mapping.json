{
  "eufar": {
    "_source": {
        "excludes": [
            "spatial.geometries.coordinates",
            "spatial.geometries.hull"
        ]
    },
    "_all": {
        "enabled": true
    },
    "properties": {
      "data_format": {
        "properties": {
          "format": {
            "type": "string",
            "store": "yes"
          }
        }
      },
      "file": {
        "properties": {
          "filename": {
            "type": "string",
            "analyzer": "simple",
            "store": "yes"
          },
          "path": {
            "type": "string",
            "analyzer": "simple",
            "store": "yes"
          },
          "size": {
            "type": "long"
          }
        }
      },
      "misc": {
        "type": "object"
      },
      "spatial": {
        "properties": {
          "geometries": {
            "properties": {
              "bbox": {
                "type": "geo_shape",
                "tree": "quadtree",
                "precision": "50m",
                "store": "yes"
              },
              "coordinates": {
                "type": "double",
                "enabled": false,
                "include_in_all" : false,
                "index": "no",
                "store": "no"
              },
              "hull": {
                "properties": {
                  "coordinates": {
                    "type": "double",
                    "enabled": false,
                    "include_in_all" : false,
                    "index": "no",
                    "store": "no"
                  },
                  "type": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "temporal": {
        "properties": {
          "end_time": {
            "type": "date",
            "format": "dateOptionalTime",
            "store": "yes"
          },
          "start_time": {
            "type": "date",
            "format": "dateOptionalTime",
            "store": "yes"
          }
        }
      }
    }
  }
}
