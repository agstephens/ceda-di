{
    "settings": {
        "analysis": {
            "filter": {
                "min_length_5_filter": {
                    "type": "length",
                    "min": 5,
                    "max": 256
                },
                "path_filter": {
                    "type": "word_delimiter",
                    "generate_word_parts": "yes",
                    "generate_number_parts": "no",
                    "split_on_numerics": "no"
                }
            },
            "analyzer": {
                "variable_name_analyzer": {
                    "type": "custom",
                    "tokenizer": "keyword",
                    "filter": ["min_length_5_filter"]
                },
                "path_hierarchy_analyzer": {
                    "type": "custom",
                    "tokenizer": "path_hierarchy"
                },
                "path_analyzer": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["path_filter"]
                }
            }
        }
    },
    "mappings": {
        "file": {
            "properties": {
                "checksum": {
                    "type": "string"
                },
                "datetime": {
                    "type": "date",
                    "format": "dateOptionalTime"
                },
                "extension": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "path": {
                    "type": "string",
                    "store": true,
                    "analyzer": "path_analyzer",
                    "fields": {
                        "hierarchy": {
                            "type": "string",
                            "store": true,
                            "analyzer": "path_hierarchy_analyzer"
                        }
                    }
                },
                "size": {
                    "type": "long"
                }
            }
        }
    }
}
